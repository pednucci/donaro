{{#section 'head'}}
    <title>Notificações de ajuda</title>
{{/section}}

{{>navbar}}

<main class="lyt_notificacoes lyt_painel pg_n-ajudas">
    <div class="usuario cards-container notif">
        <ul class="users row">
            <a href="/notificacoes">
                <li class="titulo-categoria underline">
                    Minhas campanhas 
                </li>
            </a>
            <a href="/notificacoes/doacoes">
                <li class="titulo-categoria">Minhas doações</li>
            </a>
        </ul>
        
        {{#each notificacao}}
            <a href="/painel/pedidos/{{cd_pedido}}/{{cd_solicitacao}}">
                <div class="card row">
                    <div class="card-user row">
                        <div class="card-image">
                            <img class="image-card" src="/assets/profile/{{cd_foto_usuario}}" alt="" />
                        </div>
                        <div class="card-info column">
                            <h1 class="nome-card">{{nm_usuario}}</h1>
                            <h2 class="desc-card">
                                Campanha:
                                <strong>
                                    {{nm_titulo_pedido}}</strong>
                            </h2>
                
                        </div>
                    </div>
                    <div class="card-btn column">
                        <div class="date row">
                            Enviado em:
                            <span class="date-time">{{formatDate dt_createdAt_solicitacao}}</span>
                        </div>
                    </div>
                </div>
            </a>
        {{/each}}
    </div>

</main>

{{>footer}}