<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- CSS Donaro -->
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/painel.css" />
    <link rel="stylesheet" href="/css/usuario-pedido.css" />

    <title>Aceitar solicitação</title>
</head>

{{>navbar}}

<main>
    <div class="usuario profile-container columm">

        <div class="user-container column">
            <ul class="users row">
                <a href="#">
                    <li class="titulo-categoria underline">
                        Solicitações de ajuda
                    </li>
                </a>
                <a href="/notificacoes/doacoes">
                    <li class="titulo-categoria">Doações realizadas</li>
                </a>
            </ul>
            <h1 class="titulo-user">Usuário</h1>
            {{#each notificacao}}
            <div class="user-wrapper row">
                <div class="imagePerfil column">
                    <img src="/assets/profile/{{cd_foto_usuario}}" alt="Foto de perfil" />
                </div>
                <div class="informacoes column">
                    <div>
                        <h1 class="sub titulo-user">Nome</h1>
                        <p>{{nm_usuario}}</p>
                    </div>

                    <div class="row">
                        <div>
                            <h1 class="sub titulo-user">Email</h1>
                            <p>{{cd_email_usuario}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div>
                            <h1 class="sub titulo-user">Telefone</h1>
                            <p>{{cd_celular_usuario}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        <div class="alimento-container">
            <div class="head row">
                <h1>Alimentos</h1>
                <h1>Quantidade ofertada</h1>
            </div>
            <div class="column">
                {{#each alimento}}
                <div class="alReq row">
                    <h1 class="reqAlimento">{{nm_alimento_donation}}</h1>
                    <h1 class="reqQuantidade">{{qt_contribuicao_donation}} {{nm_medida_alimento}}</h1>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="comentario-container column">
            <h1 class="sub titulo-user">Comentário</h1>
            {{#each notificacao}}
            <div class="comentario">
                <p>
                    {{ds_comentario_solicitacao}}
                </p>
            </div>
            {{/each}}
        </div>
    </div>

    <div class="botoes row">
        <form action="/notificacoes/accept" method="POST">
            {{#each notificacao}}
            <input type="hidden" name="idSoli" value="{{cd_solicitacao}}">
            {{/each}}
            <button class="btn green" type="submit">Aceitar</button>
        </form>
        <form action="/notificacoes/recused" method="POST">
            {{#each notificacao}}
            <input type="hidden" name="idSoli" value="{{cd_solicitacao}}">
            {{/each}}
            <button class="btn ghost-red" type="submit">Recusar</button>
        </form>
    </div>
</main>