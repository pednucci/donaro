<head>
    <title>Chat</title>
</head>

{{>navbar}}

<body>
    <main class="pg_chat">
        <div class="chat-container">
            <!-- Container de conversas -->
            <div class="conversas-container">
                <!-- Barra de pesquisa -->
                <form class="pesquisa">
                    <button type="submit">
                        <img
                            src="/assets/img/icone_lupa.svg"
                            alt="Icone lupa"
                        />
                    </button>
                    <input
                        class="input-form"
                        type="text"
                        name="txtPesquisa"
                        placeholder="Procurar mensagens"
                    />
                </form>

                <!-- Coluna de conversas -->
                <div class="conversas column">
                    <a href="#">
                        <div class="row conversa">
                            <!-- Imagem -->
                            <div class="conversa-img">
                                <div class="img-wrapper">
                                    <img
                                        src="/assets/img/user_gabriela.png"
                                        alt="Imagem usuário"
                                    />
                                </div>
                            </div>

                            <!-- Infos da conversa -->
                            <div class="conversa-info">
                                <!-- Nome e horário -->
                                <div class="row row1">
                                    <p class="titulo black nome-conversa">
                                        Gabriela Arantes
                                    </p>
                                    <p class="titulo-gray horario">18:25</p>
                                </div>

                                <!-- Última mensagem e número de notificações -->
                                <div class="row row2">
                                    <p class="titulo-gray ultimas-msg">
                                        Oi, boa tarde
                                    </p>
                                    <p class="titulo white qnt-msg">5</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <!-- Container do Chat  -->
            <div class="chat">
                <div class="chat-header row">
                    <!-- Imagem -->
                    <div class="img-wrapper">
                        <img
                            src="/assets/img/user_gabriela.png"
                            alt="Imagem usuário"
                        />
                    </div>

                    <!-- Nome -->
                    <p class="titulo-black nome-conversa">
                        Gabriela Arantes
                    </p>
                </div>

                <div class="chat-content">
                    <!-- Mensagem enviada -->
                    <div class="message-row enviada row">
                        <div class="mensagem row">
                            <span class="message-txt">Bom dia Gabriela, tudo
                                bom?</span>
                            <div class="message-info row">
                                <div>
                                    <span
                                        class="titulo-gray time-msg"
                                    >10:26</span>
                                    <img
                                        src="/assets/img/arrow-visualized.svg"
                                        alt="Icone mensagem visualizada"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Mensagem recebida -->
                    <div class="message-row recebida row">
                        <div class="mensagem row">
                            <span class="message-txt">Bom dia André, tudo ótimo!</span>
                            <div class="message-info row">
                                <div>
                                    <span class="time-msg">10:26</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="chat-footer">
                    <form class="send-message row" action="">
                        <input
                            class="input-form"
                            type="text"
                            name="mensagem"
                            id="txt-mensagem"
                            placeholder="Digite sua mensagem"
                        />
                        <input class="btn red" type="submit" value="Enviar" />
                    </form>
                </div>
            </div>
        </div>
    </main>
</body>