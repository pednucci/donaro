<head>
    <title>Requisição</title>
</head>

{{>navbar}}

    <main class="lyt_painel lyt_usuario-pedido pg_pajuda">
        {{!-- <!-- Painel Topo--> --}}
        <div class="usuario container-painel">
            <div class="background-painel">
                {{#each solicitacao}}
                <h1 class="painel-titulo">{{nm_titulo_pedido}}</h1>
                {{/each}}
                <div class="img-wrapper">
                    <img src="/assets/img/background_user.png" alt="" />
                </div>
            </div>

            <!-- Painel Menu-->
            <div class="menu-painel">
                <ul class="menu-painel-buttons row">
                    <a href="#">
                        <li class="painel-text">Relatório</li>
                    </a>
                    <a href="#">
                        <li class="painel-text active">Ajudas recebidas</li>
                    </a>
                </ul>
            </div>
        </div>

        {{!-- <!-- Informações da ajuda --> --}}
        <div class="usuario profile-container columm">
            <!-- Usuário -->
            {{#each solicitacao}}
            <div class="user-container column">
                <div class="user-wrapper row">
                    <div class="row">
                        {{!-- <!-- Imagem --> --}}
                        <div class="imagePerfil column">
                            <img
                                src="/assets/profile/{{cd_foto_usuario}}"
                                alt="Foto de perfil"
                            />
                        </div>

                        {{!-- <!-- Nome --> --}}
                        <div class="informacoes column">
                            <h1 class="sub titulo-user user-name">
                                {{nm_usuario}}
                            </h1>
                            <p class="user-info">
                                {{telNumber cd_celular_usuario}} | {{cd_email_usuario}}
                            </p>
                        </div>
                    </div>

                    {{!-- <!-- Botão --> --}}
                    <a href="/chat/{{cd_solicitacao}}" class="btn blue" type="button">
                        Entrar no chat
                    </a>
                </div>
            </div>
            {{/each}}

            {{!-- <!-- Alimentos, comentário e situação --> --}}
            <div class="row fc-wrapper">
                {{!-- <!-- Container dos alimentos --> --}}
                <div class="food-container column">
                    <h1 class="sub titulo-user">Alimentos ofertados</h1>
                    <div class="row descAlimentos">
                        <h1>Alimentos</h1>
                        <h1>Quantidade</h1>
                    </div>
                    <div class="alimento-container">
                        <div class="column">
                            {{!-- <!-- Alimentos --> --}}
                            {{#each alimento}}
                            <div class="alReq row">
                                <h1 class="reqAlimento">{{nm_alimento_donation}}</h1>
                                <h1 class="reqQuantidade">{{qt_contribuicao_donation}}{{sg_medida_produto}}</h1>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>

                {{!-- <!-- Comentário e Situação da entrega --> --}}
                <div class="comentario-container column">
                    {{!-- <!-- Comentário --> --}}
                    <h1 class="sub titulo-user">Comentário</h1>
                    {{#each solicitacao}}
                    <div class="comentario">
                        <p>
                            {{ds_comentario_solicitacao}}
                        </p>
                    </div>
                    {{/each}}

                    {{!-- <!-- Situação --> --}}
                    <h1 class="sub titulo-user">Situação da entrega</h1>
                    {{#each solicitacao}}
                    <p class="situacaoReq">{{cd_situacao_solicitacao}}</p>
                    {{/each}}
                </div>
            </div>
        </div>

        {{!-- <!-- Botões --> --}}
        {{#if entregueOrNot}}
        <form action="/painel/ressoli" method="POST">
        {{#each solicitacao}}
        <input type="hidden" name="soli" value="{{cd_solicitacao}}">
        {{/each}}
        <div class="botoes-wrapper column">
            <div class="botoes row">
                <button class="btn green-concluded" type="submit" name="bt" value="true">
                    Entregou o pedido
                </button>
                <button class="btn red" type="submit" name="bt" value="false">
                    Não entregou o pedido
                </button>
            </div>
        </div>
        </form>
        {{else}}
        {{/if}}
    </main>

{{>footer}}
