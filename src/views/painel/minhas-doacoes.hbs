{{#section 'head'}}
    <title>Minhas doações</title>
{{/section}}

{{>navbar}}

<main class="lyt_painel lyt_notificacoes pg_pdoações">
    {{!-- Painel --}} 
    {{> painelAdm navMinhasDoacoes="true" usuario="true"}}

    <div class="cards-container">
        <h1 class="titulo">
            Quantidade de doações:
            {{#each quant}}
            <strong class="titulo-blue">{{count}}</strong>
            {{/each}}
        </h1>
        {{#each doacoes}}
        <a href="/descobrir/pedido/{{cd_pedido}}">
            <div class="card row">
                <div class="card-user row">
                    <div class="card-image">
                        <img class="image-card" src="/assets/pedidos/{{cd_imagem_pedido}}" alt="" />
                    </div>
                    <div class="card-info column">
                        <h1 class="nome-card">
                            {{nm_titulo_pedido}}
                        </h1>
                        <h2 class="desc-card ">
                            Data da doação: {{dateNoHour dt_deliveredAt_solicitacao}}
                        </h2>
                    </div>
                </div>

                <div class="card-btn column">
                    
                        <button class="btn blue">Ver campanha</button>
                    
                </div>
            </div>
        </a>
        {{/each}}
    </div>


</main>