    <head>
        <title>Informações</title>
    </head>

    <body>
        
        {{>navbar}}

        <main class="pg_informacoes">
            <form class="form-login column" action="" method="">
                <div class="profile-container columm">
                    <div class="user-container column">
                        <h1 class="titulo-user">Minhas informações</h1>
                        <div class="user-wrapper row">
                            <div class="imagePerfil column">
                                <img
                                    src="/assets/img/user_fabio.png"
                                    alt="Foto de perfil"
                                />
                                <div
                                    class="column"
                                    style="
                                        position: absolute;
                                        width: 300px;
                                        height: 300px;
                                    "
                                >
                                    <label for="">Adicionar imagem de capa</label>
                                    <input
                                        class="input-form imagePed"
                                        type="file"
                                        accept="image/*"
                                        name="userImg"
                                        multiple
                                        style="
                                            position: absolute;
                                            width: 300px;
                                            height: 300px;
                                            opacity: 0.2;
                                        "
                                    />
                                </div>
                            </div>
                            <div class="informacoes column">
                                <div class="row">
                                    <div class="column">
                                        <label for="">Nome completo</label>
                                        <input
                                            class="input-form"
                                            type="text"
                                            name="username"
                                            placeholder="Ex: Pedro de Andrade Souza"
                                            value="André de Oliveira Paiva"
                                        />
                                    </div>
                                    <div class="column">
                                        <label for="">Email</label>
                                        <input
                                            class="input-form"
                                            type="email"
                                            name="email"
                                            value="andreopv@gmail.com"
                                        />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="column">
                                        <label for="">Data de nascimento</label>
                                        <input
                                            class="input-form"
                                            type="date"
                                            name="dtuser"
                                            value="2004-03-12"
                                        />
                                    </div>
                                    <div class="column">
                                        <label for="">Celular</label>
                                        <input
                                            class="input-form"
                                            type="tel"
                                            name="cel"
                                            value="(13) 997 1612-2135"
                                        />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="column">
                                        <label for="">Estado</label>
                                        <select
                                            name="estado"
                                            class="input-form"
                                        >
                                            <option value="0">
                                                Selecione o Estado
                                            </option>
                                        </select>
                                    </div>
                                    <div class="column">
                                        <label for="">Cidade</label>

                                        <input type="hidden" name="state" />
                                        <select
                                            name="cidade"
                                            disabled="disabled"
                                            class="input-form"
                                        >
                                            <option value="0">
                                                Seleciona a Cidade
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="column">
                                        <label for="">Senha atual</label>
                                        <input
                                            class="input-form"
                                            type="password"
                                            name="pass"
                                        />
                                    </div>
                                    <div class="column">
                                        <label for="">Senha Nova</label>
                                        <input
                                            class="input-form"
                                            type="password"
                                            name="newPass"
                                        />
                                    </div>
                                    <div class="column">
                                        <label for="">Confirme sua senha</label>
                                        <input
                                            class="input-form"
                                            type="password"
                                            name="passConf"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="botoes row">
                    <input
                        class="btn blue"
                        type="submit"
                        value="Editar informações"
                    />
                </div>
            </form>
        </main>

        {{>footer}}

    </body>

    <script src="/js/estado-cidade.js"></script>