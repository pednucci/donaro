<head>
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/forms.css" />

    <title>Cadastrar-se</title>
</head>

<header>
    <nav class="nav-bar">
        <div class="nav-logo">
            <img
                src="/assets/img/donaro_logo.svg"
                class="logo"
                alt="Logo Donaro"
            />
        </div>
        <div class="nav-menu">
            <p class="nav-link">
                JÃ¡ tem conta?
                <a href="/login" class="nav-link titulo-link">
                    Entrar
                </a>
            </p>
        </div>
    </nav>
</header>

<main>
    <div class="form-container column">
        {{#each erros}}
            <div class="error">
                <h2 class="sub titulo">{{text}}</h2>
            </div>
        {{/each}}
        <p class="sub titulo">Cadastrar-se</p>
        <form class="form-login column" action="/cadastro" method="POST">
            <label for="">Nome completo</label>
            <input class="input-form" type="text" name="username" />

            <label for="">Email</label>
            <input class="input-form" type="email" name="email" />

            <label for="">CPF</label>
            <input class="input-form" type="text" name="cpf" />

            <label for="">Celular</label>
            <input class="input-form" type="tel" name="cel" />

            <label for="">Data de nascimento</label>
            <input class="input-form" type="date" name="dtuser" />

            <label for="">Senha</label>
            <input class="input-form" type="password" name="pass" />
            <label for="">Confirme sua senha</label>
            <input class="input-form" type="password" name="passConf" />

            <div class="row">
                <div class="column">
                    <label for="">Estado</label>
                    <select name="estado" class="input-form">
                        <option value="0">Selecione o Estado</option>
                    </select>
                </div>
                <div class="column">
                    <label for="">Cidade</label>

                    <input type="hidden" name="state" />
                    <select
                        name="cidade"
                        disabled="disabled"
                        class="input-form"
                    >
                        <option value="0">Seleciona a Cidade</option>
                    </select>
                </div>
            </div>

            <input class="btn btn blue" type="submit" value="Cadastrar" />
        </form>
    </div>
</main>

<script src="/js/estado-cidade.js"></script>